@model Nhom6_QLHoSoTuyenDung.Models.UngVien

@using Microsoft.AspNetCore.Mvc.Rendering

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="HoTen" class="form-label"></label>
            <input asp-for="HoTen" class="form-control" />
            <span asp-validation-for="HoTen" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="GioiTinh" class="form-label"></label>
            <select asp-for="GioiTinh" asp-items="ViewBag.GioiTinhList" class="form-select"></select>
            <span asp-validation-for="GioiTinh" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="NgaySinh" class="form-label"></label>
            <input asp-for="NgaySinh" class="form-control" type="date" />
            <span asp-validation-for="NgaySinh" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="SoDienThoai" class="form-label"></label>
            <input asp-for="SoDienThoai" class="form-control" />
            <span asp-validation-for="SoDienThoai" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="ViTriUngTuyenId" class="form-label"></label>
            <select asp-for="ViTriUngTuyenId" asp-items="ViewBag.ViTriList" class="form-select"></select>
            <span asp-validation-for="ViTriUngTuyenId" class="text-danger"></span>
        </div>

        <div class="col-md-12">
            <label asp-for="KinhNghiem" class="form-label"></label>
            <textarea asp-for="KinhNghiem" class="form-control" rows="2"></textarea>
            <span asp-validation-for="KinhNghiem" class="text-danger"></span>
        </div>

        <div class="col-md-12">
            <label asp-for="ThanhTich" class="form-label"></label>
            <textarea asp-for="ThanhTich" class="form-control" rows="2"></textarea>
            <span asp-validation-for="ThanhTich" class="text-danger"></span>
        </div>

        <div class="col-md-12">
            <label asp-for="MoTa" class="form-label"></label>
            <textarea asp-for="MoTa" class="form-control" rows="2"></textarea>
            <span asp-validation-for="MoTa" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="NguonUngTuyen" class="form-label"></label>
            <input asp-for="NguonUngTuyen" class="form-control" />
            <span asp-validation-for="NguonUngTuyen" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="TrangThai" class="form-label"></label>
            <input asp-for="TrangThai" class="form-control" />
            <span asp-validation-for="TrangThai" class="text-danger"></span>
        </div>

        <div class="col-md-12">
            <label class="form-label">Tải lên CV</label>
            <input type="file" name="CvFile" class="form-control" required />
        </div>
    </div>


    <div class="mt-3">
        <button type="submit" class="btn btn-success">Lưu</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
    </div>
</form>
