@model List<Nhom6_QLHoSoTuyenDung.Models.ViewModels.NguoiPhongVanVM.HoatDongGanDayVM>

<div class="card shadow-sm rounded-4 p-3 h-100">
    <h5 class="fw-bold text-danger mb-3"><i class="bi bi-fire"></i> Hoạt động gần đây</h5>

    @if (Model != null && Model.Any())
    {
        <ul class="list-unstyled">
            @foreach (var item in Model)
            {
                <li class="mb-3 d-flex align-items-start">
                    <i class="bi @item.BieuTuong text-@item.Mau me-3 fs-5 mt-1"></i>
                    <div>
                        <div class="fw-semibold">@item.NoiDung</div>
                        <small class="text-muted">@item.ThoiGianTruoc</small>
                    </div>
                </li>
            }
        </ul>
    }
    else
    {
        <p class="text-muted">Chưa có hoạt động nào.</p>
    }
</div>
