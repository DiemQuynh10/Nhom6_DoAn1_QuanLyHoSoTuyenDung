@using Nhom6_QLHoSoTuyenDung.Models.ViewModels.NguoiPhongVanVM
@model List<DaPhongVanVM>
@{

    ViewData["Title"] = "Đã phỏng vấn";
}
<div class="container-fluid px-4 mt-4">
    <h3 class="fw-bold text-primary"><i class="bi bi-people-fill me-2"></i> Đã Phỏng Vấn - Chưa Đề Xuất</h3>
    <p class="text-muted mb-4">Danh sách ứng viên đã được đánh giá chi tiết nhưng chưa có quyết định tiếp nhận hoặc từ chối</p>

    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body d-flex flex-column gap-3">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5 class="fw-bold">@item.TenUngVien</h5>
                                <div class="text-muted">@item.Email</div>
                                <div class="text-secondary">@item.ViTri</div>
                            </div>
                            <div class="text-end">
                                <div class="badge bg-warning text-dark mb-1">Chờ đề xuất</div>
                                <div class="fs-4 text-success fw-bold">
                                    @(item.DiemTB.HasValue ? item.DiemTB.Value.ToString("0.0") : "–")
                                </div>

                            </div>
                        </div>

                        <div class="small text-muted">
                            <i class="bi bi-calendar-event me-1"></i> @item.ThoiGian.ToString("dd/MM/yyyy HH:mm")
                        </div>

                        @if (!string.IsNullOrEmpty(item.NhanXet))
                        {
                            <div class="bg-light p-2 rounded small">
                                <i class="bi bi-chat-left-quote-fill text-primary me-1"></i>
                                <span class="fst-italic">"@item.NhanXet"</span>
                            </div>
                        }

                        <div class="d-flex gap-2">
                            <a href="@Url.Action("DanhGia", "DanhGiaPhongVans", new { id = item.LichId, returnUrl = "DaPhongVan" })" class="btn btn-sm btn-outline-primary">
                                ✏️ Cập nhật đánh giá
                            </a>
                            <a href="~/cv/@item.LinkCV" class="btn btn-sm btn-outline-secondary" target="_blank">
                                📄 Xem CV
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
