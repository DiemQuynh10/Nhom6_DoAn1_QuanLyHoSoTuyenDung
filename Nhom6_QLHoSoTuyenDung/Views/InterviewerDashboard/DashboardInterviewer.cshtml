@model Nhom6_QLHoSoTuyenDung.Models.ViewModels.NguoiPhongVanVM.DashboardNguoiPhongVanVM
@using System.Text.Json

@{
    Layout = "~/Views/Shared/_LayoutInterviewer.cshtml";
    ViewData["Title"] = "Trang người phỏng vấn";

    var labels = JsonSerializer.Serialize(Model.PhongVanLabels);
    var values = JsonSerializer.Serialize(Model.PhongVanValues);
    var thanhCong = JsonSerializer.Serialize(Model.ThanhCongValues);

    var coLich = Model.LichPhongVanSapToi != null && Model.LichPhongVanSapToi.Any();
    var lichDauTien = coLich ? Model.LichPhongVanSapToi.First() : null;
}
<div class="container-fluid px-4 mt-4">
    <h2 class="fw-bold mb-4">Dashboard Người Phỏng Vấn</h2>

    <!-- Thống kê tổng quan -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm rounded-4 p-3">
                <h6 class="text-muted">Phỏng vấn của tôi</h6>
                <h4 class="fw-bold">@Model.TongSoPhongVan <span class="text-success fs-6">+@Model.TangTruongThangTruoc</span></h4>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm rounded-4 p-3">
                <h6 class="text-muted">Tỷ lệ thành công</h6>
                <h4 class="fw-bold">@Model.TyLeThanhCong% <i class="bi bi-check-circle-fill text-success"></i></h4>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm rounded-4 p-3">
                <h6 class="text-muted">Thời gian TB</h6>
                <h4 class="fw-bold">@Model.ThoiGianTB phút <span class="fs-6 text-danger">@Model.ThayDoiThoiGianTB</span></h4>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm rounded-4 p-3">
                <div class="text-muted">Lịch hôm nay</div>
                <div class="fs-4 fw-bold">@Model.SoPhongVanHomNay</div>

            </div>
        </div>
    </div>

    <!-- Biểu đồ + Lịch -->
    <div class="row mb-4">
        <!-- Biểu đồ -->
        <div class="col-md-6">
            <div class="card shadow-sm rounded-4 p-3 h-100">
                <div class="d-flex justify-content-between mb-2">
                    <h5 class="fw-bold"><i class="bi bi-graph-up"></i> Xu hướng phỏng vấn của tôi</h5>
                </div>
                <canvas id="chartPhongVan" style="height:300px"></canvas>
            </div>
        </div>

        <!-- Lịch sắp tới -->
        <div class="col-md-6">
            <div class="card shadow-sm rounded-4 p-3 h-100">
                <div class="d-flex justify-content-between mb-3">
                    <h5 class="fw-bold"><i class="bi bi-fire text-danger"></i> Lịch sắp tới</h5>
                    <span class="text-primary small">Cập nhật realtime</span>
                </div>
                <div style="max-height:460px; overflow-y:auto;">
                    @if (coLich)
                    {
                        <div class="p-3 rounded-4 mb-4" style="background: linear-gradient(to right, #dff1ff, #eaf7ff);">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-bold fs-4 text-primary">@lichDauTien.ThoiGian?.ToString("HH:mm")</div>
                                    <div class="badge bg-info text-white fw-semibold">TIẾP THEO</div>
                                    <div class="text-muted small">
                                        @if (lichDauTien.ThoiGian.HasValue)
                                        {
                                            var diff = lichDauTien.ThoiGian.Value - DateTime.Now;
                                            <span>@diff.Hours giờ @diff.Minutes phút nữa</span>
                                        }
                                    </div>
                                </div>
                                <div class="text-end">
                                    <div class="fw-bold fs-5">@lichDauTien.HoTen</div>
                                    <div class="text-secondary">@lichDauTien.ViTri</div>
                                    <div class="text-muted small">
                                        <i class="bi bi-geo-alt"></i> @lichDauTien.NhanNhan &nbsp;
                                        <i class="bi bi-clock"></i> 60 phút
                                    </div>
                                    <div class="mt-2">
                                        <a class="btn btn-primary btn-sm me-1" href="/PhongVan/BatDau/@lichDauTien.Id">🚀 Bắt đầu phỏng vấn</a>
                                        <a class="btn btn-outline-secondary btn-sm me-1" href="/UngVien/CV/@lichDauTien.Id">
                                            <i class="bi bi-file-earmark-text"></i> Xem CV
                                        </a>
                                        <a class="btn btn-outline-secondary btn-sm" href="/GhiChu/@lichDauTien.Id">
                                            <i class="bi bi-chat-text"></i> Ghi chú
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="small text-muted mb-2">Lịch tiếp theo:</div>
                        <div class="d-flex flex-column gap-2">
                            @foreach (var lich in Model.LichPhongVanSapToi.Skip(1))
                            {
                                var diff = lich.ThoiGian.Value - DateTime.Now;
                                var color = "#f6e7fc";
                                if (lich.ViTri.Contains("Backend")) color = "#e3f9ec";
                                else if (lich.ViTri.Contains("Product")) color = "#fff3e4";

                                <div class="p-3 rounded-3" style="background-color:@color;">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <span class="fw-bold">@lich.ThoiGian?.ToString("HH:mm")</span>
                                            <span class="text-muted">@diff.Hours giờ @diff.Minutes phút nữa</span>
                                        </div>
                                        <div class="text-end">
                                            <div class="fw-semibold">@lich.HoTen</div>
                                            <div class="text-secondary">@lich.ViTri</div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-muted">Không có lịch phỏng vấn sắp tới</div>
                    }
                </div>
            </div>
        </div>
        <!-- Hàng dưới mới: Biểu đồ trạng thái - Thành tích - Hoạt động gần đây -->
        <div class="row mb-4">
            <!-- Trạng thái phỏng vấn -->
            <div class="col-md-4">
                <div class="card shadow-sm rounded-4 p-3 h-100">
                    <h6 class="fw-bold"><i class="bi bi-pie-chart-fill"></i> Trạng thái phỏng vấn</h6>
                    <canvas id="chartTrangThai"></canvas>
                </div>
            </div>
            <!-- Thành tích -->
            <div class="col-md-4">
                <div class="card shadow-sm rounded-4 p-3 h-100">
                    <h6 class="fw-bold"><i class="bi bi-trophy-fill"></i> Thành tích của tôi</h6>
                    <div class="bg-light rounded-3 p-2 mb-2">
                        <strong>@Model.HoTen</strong><br />@Model.ChucDanh<br />
                        <span class="text-primary fw-bold">@Model.TyLeThanhCong%</span> - @Model.TongSoPhongVan phỏng vấn
                    </div>
                    <div class="text-success fw-bold fs-4">@Model.SoThanhCong</div>
                    <div class="text-muted mb-2">Thành công</div>
                    <div class="text-danger fw-bold fs-4">@Model.SoKhongPhuHop</div>
                    <div class="text-muted">Không phù hợp</div>
                    <div class="mt-3 small">Xếp hạng trong team</div>
                    <div class="progress rounded-pill">
                        <div class="progress-bar bg-warning" style="width:@Model.TiLeXepHang%">#@Model.XepHang / @Model.TongThanhVien</div>
                    </div>
                </div>
            </div>
            <!-- Hoạt động gần đây -->
            <div class="col-md-4">
                <div class="card shadow-sm rounded-4 p-3 h-100">
                    <h6 class="fw-bold text-danger"><i class="bi bi-fire"></i> Hoạt động gần đây</h6>
                    <ul class="list-unstyled small">
                        @foreach (var hoatDong in Model.HoatDongGanDay)
                        {
                            <li>
                                <i class="bi @hoatDong.BieuTuong text-@hoatDong.Mau"></i>
                                @hoatDong.NoiDung - @hoatDong.ThoiGianTruoc
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('chartPhongVan');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Html.Raw(JsonSerializer.Serialize(Model.PhongVanLabels)),
                datasets: [
                    {
                        label: 'Phỏng vấn',
                        data: @Html.Raw(JsonSerializer.Serialize(Model.PhongVanValues)),
                        borderColor: '#3b82f6',
                        backgroundColor: 'rgba(59, 130, 246, 0.1)',
                        fill: true,
                        tension: 0.3
                    },
                    {
                        label: 'Thành công',
                        data: @Html.Raw(JsonSerializer.Serialize(Model.ThanhCongValues)),
                        borderColor: '#10b981',
                        backgroundColor: 'rgba(16, 185, 129, 0.1)',
                        fill: true,
                        tension: 0.3
                    }
                ]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: true }
                }
            }
        });

        const chartTrangThai = new Chart(document.getElementById('chartTrangThai'), {
            type: 'doughnut',
            data: {
                labels: ['Đã xác nhận', 'Chờ xác nhận', 'Hoàn thành', 'Đã huỷ'],
                datasets: [{
                    label: 'Trạng thái',
                    data: @Html.Raw(JsonSerializer.Serialize(Model.TrangThaiCounts)),
                    backgroundColor: ['#22c55e', '#facc15', '#3b82f6', '#ef4444'],
                    borderWidth: 1
                }]
            },
            options: {
                cutout: '70%',
                plugins: {
                    legend: { display: true }
                }
            }
        });
    </script>
