@using Nhom6_QLHoSoTuyenDung.Models.ViewModels.PhongVanVM
@model TaoLichPhongVanVM

<form asp-action="CreateLichFromPopup" asp-controller="LichPhongVans" method="post" class="row g-3" id="formTaoLich">
    <input type="hidden" asp-for="UngVienId" />
    <input type="hidden" asp-for="ViTriId" />

    <div class="col-md-6">
        <label class="form-label fw-bold">Ứng viên</label>
        <input type="text" class="form-control bg-light" value="@Model.TenUngVien" readonly />
    </div>

    <div class="col-md-6">
        <label class="form-label fw-bold">Vị trí ứng tuyển</label>
        <input type="text" class="form-control bg-light" value="@Model.TenViTri" readonly />
    </div>

    <div class="col-md-6">
        <label asp-for="PhongPhongVanId" class="form-label fw-bold">Phòng phỏng vấn</label>
        <select asp-for="PhongPhongVanId" asp-items="Model.PhongList" class="form-select" required>
            <option value="">-- Chọn phòng --</option>
        </select>
    </div>

    <div class="col-md-6">
        <label asp-for="ThoiGian" class="form-label fw-bold">Thời gian</label>
        <input asp-for="ThoiGian" class="form-control" type="datetime-local" required />
    </div>

    <div class="col-md-12">
        <label asp-for="NguoiPhongVanIds" class="form-label fw-bold">Người phỏng vấn</label>
        <select asp-for="NguoiPhongVanIds" asp-items="Model.NguoiPhongVanOptions" class="form-select" multiple required></select>
        <small class="text-muted">Giữ Ctrl (Windows) hoặc Command (Mac) để chọn nhiều người.</small>
    </div>

    <div class="col-md-12">
        <label asp-for="GhiChu" class="form-label fw-bold">Ghi chú (nếu có)</label>
        <textarea asp-for="GhiChu" class="form-control" rows="2"></textarea>
    </div>

    <div class="col-12 text-end">
        <button type="submit" class="btn btn-success">💾 Lưu lịch</button>
    </div>
</form>
