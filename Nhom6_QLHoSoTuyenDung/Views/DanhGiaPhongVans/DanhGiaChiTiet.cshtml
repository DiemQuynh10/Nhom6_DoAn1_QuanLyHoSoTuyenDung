@using Nhom6_QLHoSoTuyenDung.Models.ViewModels.PhongVanVM
@model DanhGiaChiTietVM

@{
    Layout = "~/Views/Shared/_LayoutInterviewer.cshtml";
    ViewData["Title"] = "Đánh giá chi tiết ứng viên";
}

<h2 class="mb-4 fw-bold">📝 Đánh giá chi tiết ứng viên</h2>

<form asp-action="DanhGiaChiTiet" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="LichPhongVanId" />

    <div class="mb-3">
        <label asp-for="KyNangChuyenMon" class="form-label"></label>
        <input asp-for="KyNangChuyenMon" class="form-control" type="number" min="0" max="10" />
    </div>

    <div class="mb-3">
        <label asp-for="GiaoTiep" class="form-label"></label>
        <input asp-for="GiaoTiep" class="form-control" type="number" min="0" max="10" />
    </div>

    <div class="mb-3">
        <label asp-for="GiaiQuyetVanDe" class="form-label"></label>
        <input asp-for="GiaiQuyetVanDe" class="form-control" type="number" min="0" max="10" />
    </div>

    <div class="mb-3">
        <label asp-for="ThaiDo" class="form-label"></label>
        <input asp-for="ThaiDo" class="form-control" type="number" min="0" max="10" />
    </div>

    <div class="mb-3">
        <label asp-for="HocHoi" class="form-label"></label>
        <input asp-for="HocHoi" class="form-control" type="number" min="0" max="10" />
    </div>

    <div class="mb-3">
        <label asp-for="NhanXet" class="form-label"></label>
        <textarea asp-for="NhanXet" class="form-control" rows="3"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="DeXuat" class="form-label"></label>
        <select asp-for="DeXuat" class="form-select">
            <option value="">-- Chọn --</option>
            <option value="Phù hợp">Phù hợp</option>
            <option value="Vào vòng 2">Vào vòng 2</option>
            <option value="Không phù hợp">Không phù hợp</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="bi bi-save"></i> Lưu đánh giá
    </button>
</form>
