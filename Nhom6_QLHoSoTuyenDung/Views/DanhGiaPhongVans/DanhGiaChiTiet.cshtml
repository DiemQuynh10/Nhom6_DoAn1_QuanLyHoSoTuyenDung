@using Nhom6_QLHoSoTuyenDung.Models.Enums
@using Nhom6_QLHoSoTuyenDung.Models.ViewModels.NguoiPhongVanVM
@model DanhGiaChiTietVM

@{
    Layout = "~/Views/Shared/_LayoutInterviewer.cshtml";
    ViewData["Title"] = "Đánh giá ứng viên";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-4 text-primary">Đánh giá ứng viên</h2>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <form asp-action="DanhGiaChiTiet" asp-controller="DanhGiaPhongVans" method="post">
        <input type="hidden" asp-for="LichPhongVanId" />

        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="KyNangChuyenMon" class="form-label">Kỹ năng chuyên môn</label>
                <input asp-for="KyNangChuyenMon" type="number" class="form-control" min="1" max="10" />
                <span asp-validation-for="KyNangChuyenMon" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="GiaoTiep" class="form-label">Giao tiếp</label>
                <input asp-for="GiaoTiep" type="number" class="form-control" min="1" max="10" />
                <span asp-validation-for="GiaoTiep" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="GiaiQuyetVanDe" class="form-label">Giải quyết vấn đề</label>
                <input asp-for="GiaiQuyetVanDe" type="number" class="form-control" min="1" max="10" />
                <span asp-validation-for="GiaiQuyetVanDe" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="ThaiDoLamViec" class="form-label">Thái độ làm việc</label>
                <input asp-for="ThaiDoLamViec" type="number" class="form-control" min="1" max="10" />
                <span asp-validation-for="ThaiDoLamViec" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="TinhThanHocHoi" class="form-label">Tinh thần học hỏi</label>
                <input asp-for="TinhThanHocHoi" type="number" class="form-control" min="1" max="10" />
                <span asp-validation-for="TinhThanHocHoi" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-4">
            <label asp-for="NhanXet" class="form-label">Nhận xét</label>
            <textarea asp-for="NhanXet" class="form-control" rows="4"></textarea>
            <span asp-validation-for="NhanXet" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <label asp-for="DeXuat" class="form-label">Đề xuất</label>
            <select asp-for="DeXuat" class="form-select" asp-items="Html.GetEnumSelectList<DeXuatEnum>()">
                <option disabled selected value="">-- Chọn đề xuất --</option>
            </select>
            <span asp-validation-for="DeXuat" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="DanhGia" asp-route-id="@Model.LichPhongVanId" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-send me-1"></i> Lưu đánh giá
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
