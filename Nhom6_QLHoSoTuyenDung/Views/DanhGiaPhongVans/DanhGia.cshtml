@using Nhom6_QLHoSoTuyenDung.Models.ViewModels.PhongVanVM
@model DanhGiaPhongVanVM

@{
    Layout = "~/Views/Shared/_LayoutInterviewer.cshtml";
    ViewData["Title"] = "Đánh giá ứng viên";
}

<div class="container mt-4">
    <h4 class="mb-4 fw-bold text-primary">
        <i class="bi bi-star-fill"></i> Đánh giá Ứng viên
    </h4>

    <div class="card p-4 mb-4 shadow-sm border-0">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h3 class="fw-bold">@Model.TenUngVien</h3>
                <p class="text-muted mb-1">Ứng tuyển: <strong>@Model.TenViTri</strong></p>

                @if (!string.IsNullOrEmpty(Model.KinhNghiem))
                {
                    <h5 class="mt-4 text-primary">🧠 Kinh nghiệm & kỹ năng</h5>
                    <div class="alert alert-light border border-primary">
                        <i class="bi bi-check2-circle me-1"></i> @Model.KinhNghiem
                    </div>
                }

                <p class="mb-1">
                    <i class="bi bi-calendar-event"></i> Thời gian: @Model.ThoiGian.ToString("dd/MM/yyyy HH:mm")
                </p>
                <p class="mb-1">
                    <i class="bi bi-geo-alt-fill"></i> Phòng: @Model.TenPhong
                </p>
            </div>

            @if (Model.DiemDanhGia > 0)
            {
                <div class="text-center">
                    <div class="rounded-circle bg-success text-white fw-bold fs-4 p-4" style="width: 100px; height: 100px;">
                        @Model.DiemDanhGia
                    </div>
                    <p class="mt-2 fw-bold text-uppercase">
                        @{
                            if (Model.DiemDanhGia >= 8)
                            {
                                @:Xuất sắc
                            }
                            else if (Model.DiemDanhGia >= 6)
                            {
                                @:Tốt
                            }
                            else if (Model.DiemDanhGia >= 4)
                            {
                                @:Trung bình
                            }
                            else
                            {
                                @:Kém
                            }
                        }
                    </p>
                </div>
            }
        </div>

        <div class="d-flex gap-2 mt-3">
            <a asp-action="DanhGiaChiTiet" asp-route-id="@Model.LichPhongVanId" class="btn btn-outline-primary">
                <i class="bi bi-star-fill me-1"></i> Đánh giá chi tiết
            </a>
            <a href="@Model.LinkCV" class="btn btn-outline-secondary" target="_blank">
                <i class="bi bi-file-earmark"></i> Tài liệu CV
            </a>
            <a href="#" class="btn btn-outline-info">
                <i class="bi bi-chat-dots"></i> Phỏng vấn
            </a>
        </div>
    </div>

    <form asp-action="DanhGia" method="post">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.LichPhongVanId)

        <div class="mb-3">
            <label asp-for="DiemDanhGia" class="form-label">Điểm đánh giá (0 - 10)</label>
            <input asp-for="DiemDanhGia" class="form-control" type="number" min="0" max="10" />
            <span class="text-danger">@Html.ValidationMessageFor(m => m.DiemDanhGia)</span>
        </div>

        <div class="mb-3">
            <label asp-for="NhanXet" class="form-label">Nhận xét</label>
            <textarea asp-for="NhanXet" class="form-control" rows="3"></textarea>
        </div>

        <div class="d-flex gap-2">
            <button name="deXuat" value="TiepNhan" class="btn btn-success">
                <i class="bi bi-check-circle-fill me-1"></i> Tiếp nhận
            </button>
            <button name="deXuat" value="TuChoi" class="btn btn-danger">
                <i class="bi bi-x-circle-fill me-1"></i> Từ chối
            </button>
        </div>
    </form>
</div>
