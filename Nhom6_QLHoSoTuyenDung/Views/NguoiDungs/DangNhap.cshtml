@using Nhom6_QLHoSoTuyenDung.Models.ViewModels
@model DangNhapVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Đăng nhập - ProCV</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="container mt-5" style="max-width: 400px;">
        <h3 class="text-center">Đăng nhập hệ thống</h3>
        <form asp-action="DangNhap" method="post">
            <div class="mb-3">
                <label asp-for="TenDangNhap" class="form-label"></label>
                <input asp-for="TenDangNhap" class="form-control" />
                <span asp-validation-for="TenDangNhap" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="MatKhau" class="form-label"></label>
                <input asp-for="MatKhau" class="form-control" type="password" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
            <div class="text-center mt-2">
                <a asp-action="QuenMatKhau">Quên mật khẩu?</a>
            </div>
        </form>
    </div>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
