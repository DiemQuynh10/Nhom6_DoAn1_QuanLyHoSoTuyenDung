@using Nhom6_QLHoSoTuyenDung.Models.ViewModels
@model DatLaiMatKhauVM
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card shadow p-4" style="max-width: 450px; width: 100%;">
            <h3 class="mb-4 text-center text-primary fw-bold">🔒 Đặt lại mật khẩu</h3>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <form asp-action="DatLaiMatKhau" method="post" novalidate>
                <input type="hidden" asp-for="TenDangNhap" />

                <div class="mb-3">
                    <label asp-for="MatKhauMoi" class="form-label">Mật khẩu mới</label>
                    <input asp-for="MatKhauMoi" type="password" class="form-control" />
                    <span asp-validation-for="MatKhauMoi" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="XacNhanMatKhauMoi" class="form-label">Xác nhận mật khẩu mới</label>
                    <input asp-for="XacNhanMatKhauMoi" type="password" class="form-control" />
                    <span asp-validation-for="XacNhanMatKhauMoi" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Đặt lại mật khẩu</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
