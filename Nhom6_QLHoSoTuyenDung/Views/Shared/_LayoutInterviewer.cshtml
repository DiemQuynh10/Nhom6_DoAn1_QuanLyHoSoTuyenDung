@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] – Interviewer</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    <style>
        body {
            overflow-x: hidden;
            background: radial-gradient(circle at bottom left, rgba(42,157,143,0.05) 0%, white 100%);
            background-color: #f3fefc;
        }

        .sidebar {
            width: 230px;
            min-height: 100vh;
            background-color: #e6f4f1;
            position: fixed;
            top: 0;
            left: 0;
            transition: all 0.3s;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.05);
        }

            .sidebar .nav-link {
                color: #333;
            }

                .sidebar .nav-link.active,
                .sidebar .nav-link:hover {
                    font-weight: bold;
                    background-color: #cceee7;
                    color: #2a9d8f;
                }

        .content-wrapper {
            margin-left: 230px;
            transition: all 0.3s;
        }

        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }

                .sidebar.show {
                    transform: translateX(0);
                    z-index: 1000;
                }

            .content-wrapper {
                margin-left: 0;
            }
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column p-3" id="sidebarMenu">
        <div class="d-flex align-items-center mb-3">
            <img src="~/images/lgo.png" alt="CyberFortis" style="height: 32px;" class="me-2" />
            <span class="fs-5 fw-bold" style="color: #2a9d8f;">CyberFortis</span>
        </div>

        @await Html.PartialAsync("_SidebarInterviewer") @* Bạn có thể dùng _SidebarInterviewer nếu vẫn muốn tách riêng *@
    </div>

    <!-- Topbar -->
    @await Html.PartialAsync("_TopbarPartial")

    <!-- Main content -->
    <main class="content-wrapper p-4">
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const sidebar = document.getElementById("sidebarMenu");
        const toggle = document.getElementById("menuToggle");
        toggle?.addEventListener("click", () => {
            sidebar.classList.toggle("show");
        });
    </script>
    @await Html.PartialAsync("_CvModalPartial")
</body>
</html>
