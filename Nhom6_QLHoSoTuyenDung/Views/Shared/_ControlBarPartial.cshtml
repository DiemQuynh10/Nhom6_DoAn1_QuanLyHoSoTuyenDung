@using Nhom6_QLHoSoTuyenDung.Models.ViewModels
@* Partial View: _ControlBarPartial.cshtml *@
@model ControlBarViewModel

<div class="sticky-top bg-white shadow-sm border-bottom d-flex justify-content-between align-items-center px-3 py-2" style="top: 0; z-index: 1030;">
    <h4 class="fw-bold m-0 d-flex align-items-center">
        <i class="@Model.Icon me-2 text-primary"></i> @Model.Title
    </h4>
    <div class="d-flex gap-2">
        @if (!string.IsNullOrEmpty(Model.CreateTargetId))
        {
            <button class="btn btn-primary d-flex align-items-center" data-bs-toggle="modal" data-bs-target="@Model.CreateTargetId">
                <i class="bi bi-person-plus-fill me-1"></i> Thêm ứng viên
            </button>
        }
        @if (!string.IsNullOrEmpty(Model.ImportTargetId))
        {
            <button class="btn btn-outline-success d-flex align-items-center" data-bs-toggle="modal" data-bs-target="@Model.ImportTargetId">
                <i class="bi bi-file-earmark-excel-fill me-1"></i>Nhập từ Excel
            </button>
        }
        @if (Model.ShowFilterButton)
        {
            <button class="btn btn-outline-dark d-flex align-items-center" data-bs-toggle="offcanvas" data-bs-target="#offcanvasFilter">
                <i class="bi bi-funnel-fill me-1"></i> Bộ lọc
            </button>
        }
    </div>
</div>
<div style="height: 70px;"></div>
