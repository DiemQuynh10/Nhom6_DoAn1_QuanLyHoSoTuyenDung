@model List<Nhom6_QLHoSoTuyenDung.Models.ViewModels.ThongKe.ViTriThanhCongVM>

@{
    int stt = 1;
}
<table class="table table-bordered mb-0">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Vị trí</th>
            <th>Phòng ban</th>
            <th>Số lượng tuyển</th>
            <th>Ngày gần nhất</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@(stt++)</td>  <!-- ✅ Đây là dòng bạn cần sửa -->
                    <td>@item.TenViTri</td>
                    <td>@item.PhongBan</td>
                    <td>@item.SoLuongTuyen</td>
                    <td>@item.NgayTuyenGanNhat</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">Không có dữ liệu</td>
            </tr>
        }
    </tbody>
</table>
